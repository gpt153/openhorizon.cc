# =============================================================================
# OpenHorizon App - Environment Variables Template
# =============================================================================
# NEVER commit .env files with real values to git
# Copy this to .env.local and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@host:5432/database"
DIRECT_URL="postgresql://user:password@host:5432/database"

# =============================================================================
# AUTHENTICATION - CLERK
# =============================================================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_key_here"
CLERK_SECRET_KEY="sk_test_your_key_here"

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# Webhook secret for verifying Clerk webhook requests
# Generate in Clerk Dashboard -> Webhooks
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# =============================================================================
# SUPABASE
# =============================================================================
# Get these from https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key_here"

# =============================================================================
# AI / OPENAI
# =============================================================================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your_api_key_here"

# Optional: Anthropic Claude API
ANTHROPIC_API_KEY="sk-ant-api..."

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3001"
NEXT_TELEMETRY_DISABLED="1"

# =============================================================================
# EMAIL
# =============================================================================
# SendGrid - Get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY="SG.your_api_key_here"
SENDGRID_FROM_EMAIL="projects@openhorizon.cc"
SENDGRID_FROM_NAME="Open Horizon Projects"
SENDGRID_WEBHOOK_SECRET="your_webhook_secret_here"

# Resend - Alternative email provider
RESEND_API_KEY="re_..."

# =============================================================================
# MAPS
# =============================================================================
# Mapbox - for location features
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="pk.eyJ..."

# =============================================================================
# BACKGROUND JOBS - INNGEST (Optional)
# =============================================================================
# Get from https://app.inngest.com
INNGEST_EVENT_KEY="your_event_key_here"
INNGEST_SIGNING_KEY="signkey-prod-your_key_here"

# =============================================================================
# ERROR TRACKING - SENTRY (Optional)
# =============================================================================
# Get from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN="https://examplePublicKey@o0.ingest.sentry.io/0"
SENTRY_DSN="https://examplePublicKey@o0.ingest.sentry.io/0"
NEXT_PUBLIC_SENTRY_ENVIRONMENT="development"
SENTRY_ENVIRONMENT="development"
SENTRY_ORG="your-org-name"
SENTRY_PROJECT="your-project-name"

# Optional: Release tracking
SENTRY_RELEASE="${GIT_SHA}"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Uncomment for local development
# NEXT_PUBLIC_VERCEL_ENV="development"
